algoritmo "Número Par ou Ímpar"
// Função :
// Autor :
// Data : 02/08/2022
// Seção de Declarações 
var
numero:inteiro
inicio
escreval("Digite um número: ")
leia(numero)

se numero mod 2=0 entao
   escreval("O número",numero," é par")

 senao
    escreval("O número",numero," é ímpar")
 fimse

fimalgoritmo
